#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main (){
	setlocale(LC_ALL,"");
	
	int n1,n2;
	
	printf("Escreva o primeiro numero:");
	scanf("%d",&n1);
	
	printf("Escreva o segundo numero:");
	scanf("%d",&n2);
	
	//verificar qual e o maior
	if(n1>n2){
		printf("O maior número é %d. \n",n1);
   }else if(n2>n1){
   		printf("O maior número é %d. \n",n2);
   }else {
   	 	printf("Os dois números sao iguais.\n");
   }
	
	return 0;
}
